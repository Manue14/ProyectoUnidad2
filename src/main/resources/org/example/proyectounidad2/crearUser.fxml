<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import java.net.URL?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.proyectounidad2.Controller.CrearUserController">
    <stylesheets>
        <URL value="@styles/formulario.css" />
    </stylesheets>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>


    <Button onAction="#Volver" text="Volver" />
    <TextField fx:id="usernameField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
               minWidth="-Infinity" prefHeight="26.0" prefWidth="180.0" promptText="Usuario" />

    <!-- Campo de contraseña -->
    <PasswordField fx:id="passwordField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
    minWidth="-Infinity" prefHeight="26.0" prefWidth="180.0" promptText="Contraseña" />

    <PasswordField fx:id="passwordFieldRepeticion" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                   minWidth="-Infinity" prefHeight="26.0" prefWidth="180.0" promptText="Repite la Contraseña" />

    <!-- Etiqueta para mostrar mensajes como error o éxito -->
    <Label fx:id="messageLabel" styleClass="error-message"  text="" />

    <Button onAction="#CrearUsuario" text="Crear" />
</VBox>
